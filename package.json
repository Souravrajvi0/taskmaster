{
  "name": "taskmaster",
  "version": "1.0.0",
  "description": "A distributed task scheduling system built in Node.js",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "pretest": "docker build -f postgres-dockerfile -t scheduler-postgres .",
    "scheduler": "node cmd/scheduler/main.js",
    "coordinator": "node cmd/coordinator/main.js",
    "worker": "node cmd/worker/main.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
    "proto:build": "cd pkg/grpcapi && ./build.sh"
  },
  "keywords": [
    "task-scheduler",
    "distributed-systems",
    "grpc",
    "microservices"
  ],
  "author": "JyotinderSingh",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.9.13",
    "@grpc/proto-loader": "^0.7.10",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "axios": "^1.6.5",
    "jest": "^29.7.0",
    "testcontainers": "^10.4.0"
  }
}
